{{ define "devicelist.page.tmpl" }}

{{ template "header" .}}

   <div class="container-fluid py-5">
        <div class="row">
            <div class="col">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                          <th scope="col">Name</th>
                          <th scope="col">Full Name</th>
                          <th scope="col">Host Name</th>
                          <th scope="col">IP</th>
                          <th scope="col">Port</th>
                          <th scope="col">Manufacturer</th>
                          <th scope="col">Model</th>
                          <th scope="col">Misc Info</th>
                          <th scope="col">First Seen</th>
                          <th scope="col">Last Seen</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{ range .devices }}
                        <tr>
                          <td>{{ .Name }}</td>
                          <td>{{ .FullName }}</td>
                          <td>{{ .HostName }}</td>
                          <td>{{ .IPv4 }}</td>
                          <td>{{ .Port }}</td>
                          <td>{{ .Manufacturer }}</td>
                          <td>{{ .Model }}</td>
                          <td>{{ .Info }}</td>
                          <td>{{ .FirstSeen }}</td>
                          <td>{{ .LastSeen }}</td>
                        </tr>
                        {{ end }}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{{ template "footer" .}}

{{ end }}
